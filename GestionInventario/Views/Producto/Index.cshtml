@model List<GestionInventario.Models.Producto>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@ViewBag.Mensaje

<button type="button" class="btn btn-success"><a href="@Url.Content("~/Producto/Add")">Ingresar Producto</a></button>

<table class="table">
    <tr>
        <th>
            Codigo
        </th>
        <th>
            Nombre
        </th>
        <th>
            Cantidad
        </th>
        <th>
            #
        </th>
        @*<th></th>*@
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precioUnitario)
            </td>
            <td>
                <a id="btnEditCaso" onclick="editar(@item.Codigo)" class="btn btn-outline btn-success btn-xs newTooltip" title="Editar"
                   data-placement="left" data-toggle="tooltip" data-original-title="">
                    <span class="fa fa-edit fa-2x"> </span>
                </a>
                <a id="btnDelete" onclick="eliminar(@item.Codigo)" class="btn btn-outline btn-danger btn-xs newTooltip" title="Eliminar"
                   data-placement="left" data-toggle="tooltip" data-original-title="">
                    <span class="fa fa-trash fa-2x"> </span>
                </a>

                @*<a id="btnEditCaso" onclick="editarCaso(@a.idCaso)" class="btn btn-outline btn-danger btn-xs newTooltip" title="Editar Caso"
                       data-placement="left" data-toggle="tooltip" data-original-title="">
                        <span class="fa fa-edit fa-2x"> </span>
                    </a>*@
            </td>
        </tr>
    }

</table>

@section scripts
{
    <script>
        $(document).ready(function () {

        });

        function editar(Id) {
            document.location.href = "@Url.Content("~/Producto/Edit")" + "/" + Id;
        }


        function eliminar(Id) {
            if (confirm("Esta seguro que desea eliminar???")) {
                var url = "@Url.Content("~/Producto/Delete")" + "/" + Id;
                $.post(url, function (response) {
                    if (response.Error == true) {
                        setTimeout(bajaModal, 1000);
                        setTimeout(carga, 4000);

                        function bajaModal() {
                            $('#cargarMensajes').modal('show');
                            $('#mensajeLoad').html(response.Mensaje);
                            $("#cargaDatosBarra").modal('hide');
                        }
                        function carga() {
                            $('#cargarMensajes').modal('hide');
                        }

                    }
                    else {
                        setTimeout(bajaModal, 1000);
                        setTimeout(carga, 4000);
                        //setTimeout(redireccionar, 1000)
                        function bajaModal() {
                            $('#cargarMensajes').modal('show');
                            $('#mensajeLoad').html(response.Mensaje);
                            $("#cargaDatos").modal('hide');
                        }
                        function carga() {
                            //$('#cargarMensajes').modal('hide');
                            document.location.href = "@Url.Action("Index","Usuario")";
                        }


                    }
                });


            }

        }


    </script>

}
