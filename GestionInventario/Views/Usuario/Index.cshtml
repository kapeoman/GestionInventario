@model List<GestionInventario.Models.View.UsuarioView>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<button><a href="@Url.Content("~/Usuario/Add")">Ingresar Usuario</a></button>

<table class="table">
    <tr>
        <th>
            Rut
        </th>
        <th>
            Nombre
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Credits)
        </th>*@
        <th>
            #
        </th>
        @*<th></th>*@
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Rut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>            
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Rut }) |
                @Html.ActionLink("Details", "Details", new { id = item.Rut }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Rut })
            </td>
        </tr>
    }

</table>

