@model List<GestionInventario.Models.View.UsuarioView>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@ViewBag.Mensaje

<button><a href="@Url.Content("~/Usuario/Add")">Ingresar Usuario</a></button>

<table class="table">
    <tr>
        <th>
            Rut
        </th>
        <th>
            Nombre
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.Credits)
            </th>*@
        <th>
            #
        </th>
        @*<th></th>*@
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Rut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <a id="btnEditCaso" onclick="editar('@item.Id.ToString()')" class="btn btn-outline btn-success btn-xs newTooltip" title="Editar"
                   data-placement="left" data-toggle="tooltip" data-original-title="">
                    <span class="fa fa-edit fa-2x"> </span>
                </a>
                <a id="btnDelete" onclick="eliminar('@item.Id.ToString()')" class="btn btn-outline btn-danger btn-xs newTooltip" title="Eliminar"
                   data-placement="left" data-toggle="tooltip" data-original-title="">
                    <span class="fa fa-trash fa-2x"> </span>
                </a>

                @*<a id="btnEditCaso" onclick="editarCaso(@a.idCaso)" class="btn btn-outline btn-danger btn-xs newTooltip" title="Editar Caso"
           data-placement="left" data-toggle="tooltip" data-original-title="">
            <span class="fa fa-edit fa-2x"> </span>
        </a>*@
            </td>
        </tr>
    }

</table>

